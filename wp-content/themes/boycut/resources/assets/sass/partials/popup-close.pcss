.popup-close {
  position: absolute;
  top: 100px;
  right: 30px;
  width: 30px;
  height: 30px;

  @mixin respond-to desk {
    top: 70px;
    right: 70px;
  }

  &:hover {
    cursor: pointer;
  }
}

.popup-closeElem {
  &::after,
  &::before { 
    position: absolute;
    display: inline-block;
    width: 36px;
    height: 2px;
    background-color: white;
    content: '';
  }

  &::after {
    transform: rotate(45deg);
  }

  &::before {
    transform: rotate(-45deg);
  }
}
